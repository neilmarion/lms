<style>
table.paleBlueRows {
  font-family: "Arial", Times, serif;
  border: 1px solid #FFFFFF;
  height: 200px;
  text-align: center;
  border-collapse: collapse;
}
table.paleBlueRows td, table.paleBlueRows th {
  font-size: 13px;
  border: 1px solid #FFFFFF;
  padding: 3px 2px;
}
table.paleBlueRows tbody td {
  font-size: 13px;
}
table.paleBlueRows tr:nth-child(even) {
  background: #D0E4F5;
}
table.paleBlueRows tr.summary {
  background: #1abc9c;
}
table.paleBlueRows tr.expected {
  background: #f1c40f;
}
table.paleBlueRows tr.past {
  background: #bdc3c7;
}
table.paleBlueRows tr.custom_payment {
  background: #3498db;
}
table.paleBlueRows thead {
  background: #0B6FA4;
  border-bottom: 5px solid #FFFFFF;
}
table.paleBlueRows thead th {
  font-size: 4px;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  border-left: 2px solid #FFFFFF;
}
table.paleBlueRows thead th:first-child {
  border-left: none;
}

table.paleBlueRows tfoot {
  font-size: 4px;
  font-weight: bold;
  color: #333333;
  background: #D0E4F5;
  border-top: 3px solid #444444;
}
table.paleBlueRows tfoot td {
  font-size: 14px;
}
</style>

<%= link_to "Actual", loan_path(@loan.id, scenario: "actual") %>
<%= link_to "Expected", loan_path(@loan.id, scenario: "expected") %>
<%= link_to "Actual and Custom", loan_path(@loan.id, scenario: "actual_and_custom") %>
<br>
<%= link_to "Collapse", loan_path(@loan.id, scenario: params[:scenario], collapse: true) %>

<h3><%= params[:scenario] %></h3><br>

<h1>BALANCE: <%= @loan.current_balance.round(2) %></h1>

<table class="paleBlueRows">
  <tr>
    <th>date</th>
    <th>beginning bal</th>
    <th>beginning principal</th>
    <th>daily interest accrued</th>
    <th>total interest accrued</th>
    <th>total change</th>
    <th>interest change</th>
    <th>principal change</th>
    <th>ending interest</th>
    <th>ending principal</th>
    <th>ending balance</th>
    <th>events summary</th>
    <th>expected payment</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% if params[:collapse] && params[:scenario] != "actual" %>
  <% @current_scenario.each do |row| %>
    <% if (params[:scenario] == "expected" && row[:expected].present?) || (params[:scenario] == "actual_and_custom" && (row[:events_summary].present? || row[:custom_payment].present?)) %>
      <tr class="<%= row[:events_summary].present? ? 'summary' : nil %> <%= row[:expected].present? ? 'expected' : nil %> <%= row[:custom_payment].present? ? 'custom_payment' : nil %>">
        <td><%= row[:date] %></td>
        <td><%= row[:aaa_bal].round(2) %></td>
        <td><%= row[:aaa_pri].round(2) %></td>
        <td><%= row[:day_int].round(2) %></td>
        <td><%= row[:tot_int].round(2) %></td>
        <td><%= row[:tot_chg].round(2) %></td>
        <td><%= row[:int_chg].round(2) %></td>
        <td><%= row[:pri_chg].round(2) %></td>
        <td><%= row[:zzz_int].round(2) %></td>
        <td><%= row[:zzz_pri].round(2) %></td>
        <td><%= row[:zzz_bal].round(2) %></td>
        <td><%= row[:events_summary] %></td>
        <td><%= row[:expected].try(:[], :expected_tot_payment)&.round(2) %></td>
        <th><%= link_to "Create Event", new_loan_actual_event_path(@loan.id, date: row[:date]) %></th>
        <th><%= link_to "Events", loan_actual_events_path(@loan.id, date: row[:date]) %></th>
        <th>
          <% if params[:scenario] == "actual_and_custom" %>
            <%= link_to (@loan.custom_payments[row[:date]] || "Create Custom Payment"), show_custom_payment_loan_path(@loan.id, date: row[:date]) %>
          <% end %>
        </th>
        <th>
        </th>
      </tr>
    <% else %>
    <% end %>
  <% end %>
<% else %>
  <% @current_scenario.each do |row| %>
    <% clas = if row[:events_summary].present? %>
    <% "summary" %>
    <% elsif row[:expected].present? %>
    <% "expected" %>
    <% elsif row[:custom_payment].present? %>
    <% "custom_payment" %>
    <% elsif row[:past].present? %>
    <% "past" %>
    <% end %>

    <tr class="<%= clas %>">
      <td><%= row[:date] %></td>
      <td><%= row[:aaa_bal].round(2) %></td>
      <td><%= row[:aaa_pri].round(2) %></td>
      <td><%= row[:day_int].round(2) %></td>
      <td><%= row[:tot_int].round(2) %></td>
      <td><%= row[:tot_chg].round(2) %></td>
      <td><%= row[:int_chg].round(2) %></td>
      <td><%= row[:pri_chg].round(2) %></td>
      <td><%= row[:zzz_int].round(2) %></td>
      <td><%= row[:zzz_pri].round(2) %></td>
      <td><%= row[:zzz_bal].round(2) %></td>
      <td><%= row[:events_summary] %></td>
      <td><%= row[:expected].try(:[], :expected_tot_payment)&.round(2) %></td>
      <th><%= link_to "Create Event", new_loan_actual_event_path(@loan.id, date: row[:date]) %></th>
      <th><%= link_to "Events", loan_actual_events_path(@loan.id, date: row[:date]) %></th>
      <th>
        <% if params[:scenario] == "actual_and_custom" %>
          <%= link_to (@loan.custom_payments[row[:date]] || "Create Custom Payment"), show_custom_payment_loan_path(@loan.id, date: row[:date]) %>
        <% end %>
      </th>
      <th>
        <%= link_to "go here", change_date_pointer_loan_path(@loan.id, date: row[:date], scenario: params[:scenario]) %>
      </th>
    </tr>
  <% end %>
<% end %>
</table>
